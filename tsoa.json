{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": "build",
        "specVersion": 3,
        "securityDefinitions": {
            "access_token": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "routes": {
        "routesDir": "build",
        "basePath": "/api"
    }
}