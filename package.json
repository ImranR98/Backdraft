{
  "name": "backdraft",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "all": "npm run test && npm run build && npm run start",    
    "dev": "dotenv -e .env -- nodemon -w 'src/**/*.ts' --ignore src/routes/ -x 'tsoa spec-and-routes && ts-node' src/server.ts",
    "test": "tsoa spec-and-routes && dotenv -e .test.env -e .env -- prisma migrate deploy && dotenv -e .test.env -e .env -- mocha --exit -r ts-node/register -r test/hooks.ts test/*.test.ts",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/server.js"
  },
  "keywords": [],
