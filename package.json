    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^3.14.1",
    "validator": "^13.7.0",
    "winston": "^3.3.3"
  },
