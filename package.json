    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.0",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "mongodb-memory-server": "^8.0.4",
    "nodemon": "^2.0.15",
    "prisma": "^3.7.0",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
